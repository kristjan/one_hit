- title @site.name
- content_for :head do
  = stylesheet_link_tag 'sites/show'
- content_for :nav do
  - if @site.editable_by?(viewer)
    = link_to "Edit Hit", edit_site_path(@site)
    = link_to "Edit Quips", site_quips_path(@site)
%h1= @site.name
- if @quip
  %p.quip= @quip.text
- else
  %p.empty
    There's nothing here!
    %br/
    = link_to "Add something", site_quips_path(@site)
= link_to "Another!", @site, :class => 'action' unless @site.singleton?
= render 'sites/share'
