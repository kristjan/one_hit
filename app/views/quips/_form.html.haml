= form_for(@quip, :url => form_path(@quip)) do |f|
  - if @quip.errors.any?
    #error_explanation
      %h2
        = pluralize(@quip.errors.count, "error")
        prohibited this quip from being saved:
      %ul
        - @quip.errors.full_messages.each do |msg|
          %li= msg

  = f.text_field :text
  = f.submit "Add"
