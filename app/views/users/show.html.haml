- title "#{@user.first_name}'s Greatest Hits"
- content_for :head do
  = stylesheet_link_tag 'users/show'
#badges
  %h2 Badges
  %ul
    - @user.badges.each do |badge|
      %li= render 'badges/badge', :badge => badge

#sites
  %ul
    - @user.sites.each do |site|
      %li= link_to site.name, site_path(site)
